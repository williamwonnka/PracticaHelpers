@using PracticaMVC.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    IEnumerable<string> strList = new List<string>
    {
        "POO", "Paginas web activas", "Etica profesional", "Bases de datos avanzadas"
    };
}


<h1>Helpers</h1>

<div class="row">
    <div class="col-sm-2">
        @Html.Label("Nombre Usuario")
    </div>
    <div class="col-sm-4">
        @Html.TextBox("txtUsername","", new {@class="form-control"})
    </div>
</div>

<div class="row pt-1">
    <div class="col-sm-2">
        @Html.Label("Contraseña")
    </div>
    <div class="col-sm-4">
        @Html.Password("txtPassword","", new{@class="form-control"})
    </div>
</div>

<div class="row pt-1">
    <div class="col-sm-2">
        @Html.Label("Genero")
    </div>
    <div class="col-sm-4">
        @Html.RadioButton("Genero", "Masculino", true, new{id="masculino"})  Masculino
        @Html.RadioButton("Genero", "Femenino", false, new{id="femenino"})  Femenino
       
    </div>
</div>

<div class="row pt-1">
    <div class="col-sm-2">
        @Html.Label("Direccion")
    </div>
    <div class="col-sm-4">
        @Html.TextArea("Direccion", "Ingrese su direccion", new{@class="form-control", id= "idDireccion"})
    </div>
</div>

<div class="row pt-1">
    <div class="col-sm-2">
        @Html.Label("Pasatiempos")
    </div>
    <div class="col-sm-4">
        @Html.CheckBox("Bailar", false) Bailar
        @Html.CheckBox("Correr", false) Correr
        @Html.CheckBox("Escalar", false) Escalar
        @Html.CheckBox("Peliculas", false) Peliculas

    </div>
</div>

<div class="row pt-1">
    <div class="col-sm-2">
        @Html.Label("Curso")
    </div>
    <div class="col-sm-4">
        @Html.DropDownList("ddlCurso", new SelectList(strList,
        strList.FirstOrDefault()), "--Seleccionar curso ----", new{@class="form-control"})

    </div>
</div>

<div class="row pt-1">
    <div class="col-sm-2">
        @Html.Label("Conocimientos")
    </div>
    <div class="col-sm-4">
        @Html.ListBox("Seleccionar habilidades", new List<SelectListItem>{
        new SelectListItem {Text = "C #", Value = "1"},
        new SelectListItem {Text = "ASP.NET", Value = "2"},
        new SelectListItem {Text = "ASP.NET Core", Value = "3"},
        new SelectListItem {Text = "Azure", Value = "4"}
        }, new {@class="form-control"})

    </div>
</div>

<hr />

<div class="row">
    <div class="col-sm-2">

    </div>
    <div class="col-sm-4">
        <button type="button" class="btn btn-success form-control">Enviar datos</button>
    </div>
</div>
